{% block body %}
{% include 'header.html.twig' %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des spécialités</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #f0f8ff;
        }
        h1 {
            color: #0056b3;
            text-align: center;
            margin-bottom: 30px;
        }
        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }
        .card {
            width: 300px;
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease-in-out;
        }
        .card:hover {
            transform: scale(1.05);
        }
        .card-title {
            color: #0056b3;
            font-size: 1.5rem;
            margin-bottom: 10px;
        }
        .btn {
            margin-top: 10px;
        }
        .btn-home {
            position: fixed;
            top: 20px;
            left: 20px;
            background-color: #0056b3;
            color: white;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }
        .btn-home:hover {
            background-color: #004080;
        }
    </style>
</head>
<body>
    <a href="/" class="btn-home">
        <i class="fas fa-home"></i>
    </a>
    <div class="container mt-5">
        <h1>Liste des spécialités</h1>
        <div class="text-center mb-4">
            <a href="{{ path('speciality_new') }}" class="btn btn-primary">Créer une spécialité</a>
        </div>
        <div class="card-container">
            {% for speciality in specialities %}
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ speciality.title }}</h5>
                        <p class="card-text">ID: {{ speciality.id }}</p>
                        <a href="{{ path('speciality_show', { id: speciality.id }) }}" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Voir
                        </a>
                        <a href="{{ path('speciality_edit', { id: speciality.id }) }}" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                      
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
{% endblock %}
