{# templates/articles/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails de l'Article{% endblock %}

{% block body %}
    <h1>Détails de l'Article : {{ article.nom }}</h1>
    <p><strong>Prix :</strong> {{ article.prix | number_format(2, ',', ' ') }} €</p> {# Formatage du prix avec 2 décimales et espace pour millier #}

    {# Lien pour modifier l'article #}
    <a href="{{ path('article_edit', { id: article.id }) }}" class="btn btn-primary">Modifier</a>

    {# Lien pour revenir à la liste des articles #}
    <a href="{{ path('article_list') }}" class="btn btn-secondary">Retour à la liste des articles</a>
{% endblock %}
