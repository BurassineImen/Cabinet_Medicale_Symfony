{% block body %}
    {% include 'header.html.twig' %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cr√©er / Modifier un rendez-vous</title>
    <!-- Lien vers Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #d1e8ff, #82b1ff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        padding: 20px;
        margin: 0;
    }

    h1 {
        color: #02457a;
        font-weight: 700;
        font-size: 2.2rem;
        text-align: center;
        margin-bottom: 30px;
    }
    .card {
        background-color: #ffffff;
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        padding: 30px;
    }
    .btn-primary {
        background-color: #0056b3;
        border-color: #0056b3;
        border-radius: 30px;
        padding: 12px 40px;
        font-weight: bold;
        transition: all 0.3s ease-in-out;
    }
    .btn-primary:hover {
        background-color: #003f82;
        border-color: #003f82;
    }
    .container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
    }
    .needs-validation input, 
    .needs-validation select, 
    .needs-validation textarea {
        border-radius: 10px;
        border: 1px solid #cbd5e0;
        padding: 10px;
        margin-bottom: 15px;
        transition: box-shadow 0.2s ease-in-out;
    }
    .needs-validation input:focus, 
    .needs-validation select:focus, 
    .needs-validation textarea:focus {
        border-color: #007bff;
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
    }
    .text-center button {
        margin-top: 15px;
    }
    footer {
        margin-top: 20px;
        text-align: center;
        color: #666;
        font-size: 0.9rem;
    }
</style>

</head>
<body>

    <div class="container mt-4">
        <h1 class="text-center">Modifier un rendez-vous</h1>

        <div class="card p-4 shadow-sm">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                    <div class="mb-3">
                        {{ form_widget(form) }}
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary">Enregistrer</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <!-- Lien vers Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
{% endblock %}